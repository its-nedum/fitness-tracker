<div class="container">
<div class="banner">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-sm-12 col-md-6 auth-form">
          <h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>
          <hr>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
          <h4>Login Information</h4>
          <div class="row">
            <div class="field col-sm-12">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email", :class => 'form-control', readonly:true %>
            </div>
          </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
          <div class="row">
              <div class="field col-sm-12 col-md-6">
                <%= f.label :password %> <br />
                <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>  
              </div>
              <div class="field col-sm-12 col-md-6">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
              </div>
              <i class="pl-3">(leave blank if you don't want to change it)</i>
            </div>
            <hr>
            <h4>Basic Information</h4>
            <div class="row">
              <div class="field col-sm-12 col-md-6">
                <%= f.label :firstname %><br />
                <%= f.text_field :firstname, autocomplete: "firstname", :maxlength => 30, :class => 'form-control' %>
              </div>
              <div class="field col-sm-12 col-md-6">
                <%= f.label :lastname %><br />
                <%= f.text_field :lastname, autocomplete: "lastname", :maxlength => 30, :class => 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="field col-sm-12 col-md-6">
                <%= f.label :gender %><br />
                <%= f.select(:gender, ['Male', 'Female'], {include_blank: "Select gender"}, {:class => 'form-control'}) %>
              </div>
              <div class="field col-sm-12 col-md-6">
                  <%= f.label :date_of_birth %><br />
                  <%= f.date_field :dob, autocomplete: "dob", max: Date.today, :class => 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="field col-sm-12">
                <%= f.label :location %><br />
                <%= f.text_field :location, autocomplete: "location", :class => 'form-control' %>
              </div>
              
            </div>
            <div class="row">
                <div class="field col-sm-12 col-md-6">
                  <%= f.label :profile_image %><br />
                  <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg', :class => 'form-control' %>
                </div>
                <% if current_user.image.attached? %>
                  <div class="field col-sm-12 col-md-6">
                      <%= image_tag(current_user.image, :alt => "pic", :class => 'img-avatar-edit mt-4') %> 
                  </div>
                <% end %>
            </div>
            <div class="row">
              <div class="field col-sm-12">
                <%= f.label :about_me %><br />
                <%= f.text_area :bio, autocomplete: "bio", :class => 'form-control' %>
              </div>
            </div>

            
            <hr>
            <div class="field">
              <%= f.label :current_password %> <i class="text-danger">(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", :class => 'form-control' %>
            </div>

            <div class="actions mt-3 mb-3">
              <%= f.submit "Update", :class => 'btn btn-info' %>
            </div>
          <% end %>

    </div>
    <div class="col-md-3"></div>
  </div>
</div>
</div>
<%= render 'layouts/footer'%>